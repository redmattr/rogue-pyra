<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Use the standard per-user folder -->
  <config>
    <add key="globalPackagesFolder" value="%USERPROFILE%\.nuget\packages" />
  </config>

  <!-- Only nuget.org as source -->
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <!-- IMPORTANT: override and empty any fallback folders -->
  <fallbackPackageFolders>
  </fallbackPackageFolders>
</configuration>
